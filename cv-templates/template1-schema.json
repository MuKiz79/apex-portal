    "eduDetails": "education[0]?.highlights",
    "careerTitle": "'Berufliche Karriere'",
    "job1Title": "experience[0]?.role",
    "job1Company": "experience[0]?.company",
    "job1Period": "experience[0]?.period",
    "job1Details": "experience[0]?.achievements?.join('\\n• ')",
