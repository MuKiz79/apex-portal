rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========== HELPER FUNCTIONS ==========

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'muammer.kizilaslan@gmail.com';
    }

    // ========== USER DATA ==========

    // Users Collection - Users können nur ihr eigenes Profil lesen/schreiben
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if false;
    }

    // ========== ORDERS ==========

    // Orders Collection - Users lesen eigene, Admins lesen/schreiben alle
    match /orders/{orderId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if false; // Nur Cloud Functions
      allow update: if isAdmin(); // Admin kann Status ändern
      allow delete: if false;
    }

    // ========== APPOINTMENTS & AVAILABILITY ==========

    match /availability/{docId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // ========== PUBLIC CONTENT ==========

    // Coaches/Mentors - Öffentlich lesbar, Admin kann ändern
    match /coaches/{coachId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Articles - Öffentlich lesbar, Admin kann ändern
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings - Öffentlich lesbar, Admin kann ändern
    match /settings/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Strategy Calls - Jeder kann erstellen, Admin kann lesen/ändern
    match /strategyCalls/{callId} {
      allow create: if true; // Kontaktformular
      allow read: if isAdmin();
      allow update: if isAdmin();
      allow delete: if false;
    }

    // Waitlist - Jeder kann sich eintragen
    match /waitlist/{entryId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // ========== CATCH-ALL: DENY ==========

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
