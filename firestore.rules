rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========== HELPER FUNCTIONS ==========

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'muammer.kizilaslan@gmail.com';
    }

    // ========== USER DATA ==========

    // Users Collection - Users können nur ihr eigenes Profil lesen/schreiben
    // Admin kann alle User lesen (für Admin-Panel)
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if false;
      // Hinweis: Admin-Leseberechtigung erlaubt auch Collection-Queries
    }

    // ========== ORDERS ==========

    // Orders Collection - Users lesen eigene, Mentoren lesen zugewiesene, Admins lesen/schreiben alle
    match /orders/{orderId} {
      // Lesen (get + list): User kann eigene Orders lesen, Mentor kann zugewiesene lesen, Admin kann alle lesen
      // WICHTIG: Bei list-Queries prüft Firestore ob ALLE zurückgegebenen Dokumente die Regel erfüllen
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.customerEmail == request.auth.token.email ||
        resource.data.assignedCoachId == request.auth.uid ||
        isAdmin()
      );
      allow create: if false; // Nur Cloud Functions
      // Update: Admin kann alles ändern, User kann nur Termine bestätigen/ablehnen
      // Mentor (assignedCoachId) kann auch appointment-Felder ändern
      allow update: if isAdmin() || (
        isSignedIn() &&
        (resource.data.userId == request.auth.uid || resource.data.assignedCoachId == request.auth.uid) &&
        // Erlaubte Felder für Kunden/Mentoren
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'appointment', 'appointmentStatus', 'appointmentDeclineReason', 'appointmentDeclinedAt',
          'customerProposals', 'customerProposalNote', 'customerProposalSubmittedAt',
          'customerDocuments'  // Kunden können eigene Dokumente hochladen
        ])
      );
      allow delete: if false;
    }

    // ========== APPOINTMENTS & AVAILABILITY ==========

    match /availability/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); // Nur Admin kann Verfügbarkeiten ändern
    }

    // ========== PUBLIC CONTENT ==========

    // Coaches/Mentors - Öffentlich lesbar, Admin kann ändern, Mentor kann eigene Verfügbarkeit ändern
    match /coaches/{coachId} {
      allow read: if true;
      // Admin kann alles ändern
      allow create, delete: if isAdmin();
      // Update: Admin kann alles ändern, Mentor kann nur eigene Verfügbarkeit und userId ändern
      allow update: if isAdmin() || (
        isSignedIn() &&
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['availability', 'userId'])
      );
    }

    // Articles - Öffentlich lesbar, Admin kann ändern
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings - Öffentlich lesbar, Admin kann ändern
    match /settings/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Strategy Calls - Erstellen nur mit validen Daten, Admin kann lesen/ändern
    match /strategyCalls/{callId} {
      // Rate-Limiting: Max 5 Einträge pro Stunde pro IP (wird in Cloud Function geprüft)
      // Basis-Validierung: Name und Email müssen vorhanden sein
      allow create: if request.resource.data.keys().hasAll(['name', 'email'])
                    && request.resource.data.name is string
                    && request.resource.data.name.size() > 0
                    && request.resource.data.name.size() < 100
                    && request.resource.data.email is string
                    && request.resource.data.email.size() > 5
                    && request.resource.data.email.size() < 100;
      allow read: if isAdmin();
      allow update: if isAdmin();
      allow delete: if false;
    }

    // Waitlist - Erstellen nur mit valider Email
    match /waitlist/{entryId} {
      allow create: if request.resource.data.keys().hasAll(['email'])
                    && request.resource.data.email is string
                    && request.resource.data.email.size() > 5
                    && request.resource.data.email.size() < 100;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // Admin Config - Nur Admin kann lesen/schreiben
    match /config/{document} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // ========== CV TEMPLATES ==========

    // CV Templates Collection - Admin kann alles lesen/schreiben (für Template Designer)
    match /cvTemplates/{templateId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // ========== CV PROJECTS ==========

    // CV Projects Collection - Admin kann alles, Kunden können eigene lesen/schreiben (Fragebogen)
    match /cvProjects/{projectId} {
      // Lesen: Admin kann alle lesen, User kann eigene lesen (per userId ODER customerEmail)
      allow read: if isAdmin() || (
        isSignedIn() && (
          resource.data.userId == request.auth.uid ||
          resource.data.customerEmail == request.auth.token.email
        )
      );
      // Erstellen: Nur Admin oder System (Cloud Function)
      allow create: if isAdmin();
      // Update: Admin kann alles, User kann nur Fragebogen-bezogene Felder ändern
      // User wird identifiziert per userId ODER customerEmail
      allow update: if isAdmin() || (
        isSignedIn() &&
        (resource.data.userId == request.auth.uid || resource.data.customerEmail == request.auth.token.email) &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['questionnaire', 'documents', 'updatedAt', 'status', 'mode', 'submittedAt'])
      );
      allow delete: if isAdmin();
    }

    // ========== CATCH-ALL: DENY ==========

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
