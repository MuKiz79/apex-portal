rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users Collection - Users können nur ihr eigenes Profil lesen/schreiben
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Keine Löschung erlaubt
    }

    // Orders Collection - Users können nur eigene Bestellungen lesen
    match /orders/{orderId} {
      // Erlaubt wenn userId ODER customerEmail übereinstimmt
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.customerEmail == request.auth.token.email
      );
      allow create: if false; // Nur Functions dürfen Orders erstellen
      allow update: if false; // Nur Functions dürfen Orders updaten
      allow delete: if false; // Keine Löschung
    }

    // Availability Collection - Users können nur eigene Verfügbarkeit lesen/schreiben
    match /availability/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Coaches/Mentors Collection - Öffentlich lesbar (MUSS VOR catch-all kommen!)
    match /coaches/{coachId} {
      allow read: if true; // Öffentlich
      allow write: if false; // Nur Admins (manuell in Console)
    }

    // Articles Collection - Öffentlich lesbar
    match /articles/{articleId} {
      allow read: if true; // Öffentlich
      allow write: if false; // Nur Admins
    }

    // Settings Collection - Nur lesen erlaubt (z.B. für "Über uns" Bild)
    match /settings/{document} {
      allow read: if true; // Öffentlich lesbar
      allow write: if false; // Nur Admins (manuell in Console)
    }

    // Waitlist Collection - Jeder kann sich eintragen, nur Admins können lesen
    match /waitlist/{entryId} {
      allow create: if true; // Jeder kann sich auf Warteliste setzen
      allow read, update, delete: if false; // Nur Admins (manuell in Console)
    }

    // Members Collection - Inner Circle Members
    match /members/{memberId} {
      allow read: if isSignedIn() && request.auth.uid == memberId;
      allow write: if false; // Nur Admins
    }

    // Headhunters Collection - Members können lesen
    match /headhunters/{headhunterId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // Members können Headhunter hinzufügen
      allow update, delete: if false; // Nur Admins
    }

    // Headhunter Reviews - Members können lesen und schreiben
    match /headhunter_reviews/{reviewId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.reviewerId;
      allow update: if isSignedIn() && request.auth.uid == resource.data.reviewerId;
      allow delete: if false; // Reviews können nicht gelöscht werden
    }

    // Opportunities - Members können lesen und teilen
    match /opportunities/{opportunityId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.sharedBy;
      allow update: if isSignedIn() && request.auth.uid == resource.data.sharedBy;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.sharedBy;
    }

    // Forum Posts - Members können lesen und schreiben
    match /forum_posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.authorId;
      allow update: if isSignedIn() && request.auth.uid == resource.data.authorId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.authorId;
    }

    // Forum Replies - Members können lesen und schreiben
    match /forum_replies/{replyId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.authorId;
      allow update: if isSignedIn() && request.auth.uid == resource.data.authorId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.authorId;
    }

    // Alle anderen Collections: Komplett gesperrt (MUSS AM ENDE sein!)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
