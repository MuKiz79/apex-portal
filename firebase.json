{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "*.md",
      "*.sh"
    ],
    "rewrites": [
      {
        "source": "/template-designer/**",
        "destination": "/template-designer/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
