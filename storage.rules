rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper: Admin Check
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'muammer.kizilaslan@gmail.com';
    }

    // Profile Pictures - Users können nur ihr eigenes Bild hochladen/lesen
    match /profile-pictures/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Nur Bilder
    }

    // User Documents - Users können eigene Dokumente lesen, Admins können hochladen
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null
                   && (request.auth.uid == userId || isAdmin())
                   && request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }

    // Delivered Documents - Admin lädt fertige Dokumente für User hoch
    match /delivered/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin() && request.resource.size < 20 * 1024 * 1024; // Max 20MB
    }

    // Settings (z.B. "Über uns" Bild) - Öffentlich lesbar
    match /settings/{fileName} {
      allow read: if true; // Öffentlich
      allow write: if false; // Nur manuell über Console
    }

    // Alle anderen Dateien: Gesperrt
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
